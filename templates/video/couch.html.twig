{% extends "base.html.twig" %}

{% block title %}{{ parent() }} :: Couch'{% endblock %}

{% block body %}
	<div class="row justify-content-center" {{ stimulus_controller('videos-couch', {
		videos : videos
	}) }}>
		<div class="col-12 col-lg-6" style="height:500px">
			<div id="player"></div>
			<div id="title">
				<table class="table table-dark">
					<tbody>
						{% for track in list %}
							<tr id="{{ track.youtubeKey }}" style="display:none;">
								<td style="width: 200px"><img src="{{ track.picture|default('') }}" width="100%"></td>
								<td style="text-align:left"><span style="font-size: 1.5em">{{ track.auteur }} - {{ track.titre }}</span>
									<br>{{ track.album|default('') }} ({{ track.annee }})
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
	{% if form_track is defined %}
		{% include 'music/part/_filters.html.twig' %}
	{% endif %}
	{% if form_video is defined %}
		{% include 'video/part/_filters.html.twig' %}
	{% endif %}
{% endblock %}