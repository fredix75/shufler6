{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} :: Radios{% endblock %}

{% block body %}
    <h1><i class="bi bi-speaker-fill"></i> Radios</h1>
    <div class="row justify-content-center txt-center" data-controller="flux">
        <div class="list-group">
            {% for radio in radios %}
                <div class="list-group-item">
                    <a href="{{ radio.url }}" class="btn btn-secondary" data-action="flux#launch" data-type="radio"><i class="bi bi-play-circle"></i></a>
                    <span class="badge bg-secondary">{{ radio.mood.name ?? '' }}</span>
                    {{ radio.name}}
                    {% if is_granted('FLUX_EDIT', radio) %}
                        <a href="{{ path('flux_edit',{'id': radio.id}) }}" style="position:absolute;right:50px;"><span class="bi bi-pencil"></span></a>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
    {% include 'flux/part/_audio_stick.html.twig' %}
{% endblock %}