{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} :: News{% endblock %}

{% block body %}
    <h1><i class="bi bi-newspaper"></i> News</h1>
    <div class="row justify-content-center txt-center" data-controller="flux-news">
        {% for rss in news %}
            <section class=" row g-0 d-flex position-relative col col-12 col-md-6 col-lg-4" style="padding:5px;">
                <div id="news-{{ rss.id }}" class="row news-widget bg-body-secondary">
                    <div class="col col-12 mb-md-0 p-md-4 center-block">
                        <img src="{{ asset('/uploads/logos/' ~ rss.image) }}" alt="{{ rss.name }}" class="img-responsive center-block" style="max-height:100px; max-width:150px; margin: 0 auto;">
                    </div>
                    <div class="col-12 p-4 ps-md-0">
                        <div id="accordion-{{ rss.id }}" class="accordion" data-url="{{ rss.url }}"></div>
                    </div>
                </div>
            </section>
        {% endfor %}
    </div>
    <div id="audio-stick" class="sticky-bottom" style="height:auto; background-color:darkslategrey;"></div>
{% endblock %}