{% extends 'base.html.twig' %}

{% block title %}Hello TipController!{% endblock %}

{% block body %}
    <h1><i class="bi bi-chat-right-text"></i> Notes</h1>
    <div class="well">
        <div class="row justify-content-md-center txt-center">
            <div class="col-12 col-lg-6">
                {% if tip.id is defined and tip.id is not null%}
                    <strong style="font-size:80%">Modifier la Note du {{ tip.dateInsert|date('d/m/Y H:i') }}</strong>
                {% endif %}
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <div class="row justify-content-center">
                    <div class="col-3">
                        <button type="submit" class="btn btn-primary"><i
                                    class="bi bi-check-circle-fill"></i> OK
                        </button>
                    </div>
                </div>
                {{ form_end(form) }}
                <br><br>
                {% for tip in tips %}
                    <div class="card mb-3">
                        <div class="card-header">
                            <div class="d-flex justify-content-between">
                                <small class="badge bg-primary">{{ tip.dateInsert|date('d/m/Y H:i') }}</small>
                                <a href="{{ path('tip_delete', {'id' : tip.id, '_token' : csrf_token('delete' ~ tip.id) }) }}" class="btn btn-close" onclick="return confirm('Etes-vous sÃ»r ?')"></a>
                            </div>
                        </div>
                        <div class="card-body">
                            <blockquote class="blockquote mb-0">
                                <p>{{ tip.content|nl2br }}</p>
                                <div class="d-flex justify-content-end">
                                    <a href="{{ path('tip_list',{'id': tip.id}) }}"><i class="bi bi-pencil"></i></a>
                                </div>
                            </blockquote>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
